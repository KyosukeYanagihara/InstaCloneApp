<div class="margin-top color-white center padding-top">
  <%= form_with(model: @picture,  local: true) do |form| %>
    <%= image_tag(@picture.image.url, class: "main-image") if @picture.image && @picture.image.url %>
    <%= form.hidden_field :image_cache %>
    <%= form.hidden_field :content %>
    <p><%= @picture.content%></p>
    <%= form.submit "投稿する" %>
  <% end %>
  <%= form_with(model:@picture, url:new_picture_path, local:true, method:"get") do |form| %>
    <%= form.hidden_field :image_cache %>
    <%= form.hidden_field :content %>
    <%= form.submit "戻る", name: "back" %>
  <% end %>
</div>