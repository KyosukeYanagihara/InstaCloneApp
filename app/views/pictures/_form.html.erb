<div class="margin-top color-white">
  <%= form_with(model: picture, local: true, url: choose_new_or_edit ) do |form| %>
    <div class="center">
      <% if picture.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(picture.errors.count, "エラー") %></h2>

          <ul>
          <% picture.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <p><%= form.label :image %></p>
        <%= image_tag(@picture.image.url, class: "main-image") if @picture.image && @picture.image.url %>
        <%= form.file_field :image %>
        <%= form.hidden_field :image_cache %>
      </div>

      <div class="field content">
        <p><%= form.label :content %></p>
        <%= form.text_area :content %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
    </div>
</div>
