<div class="margin-top color-white center padding-top">
  <p><%= image_tag @picture.image.url, class: "main-image" %></p>
  <p><%= @picture.content %></p>
  <%= link_to image_tag("back.png"), pictures_path %> 
  <% unless @picture.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to image_tag("no_favorite.png"), favorite_path(id: @favorite.id), method: :delete %>
    <% else %>
      <%= link_to image_tag("favorite.png"), favorites_path(picture_id: @picture.id), method: :post %>
    <% end %>
  <% end %>
</div>